<%- include("../partials/head") %> 
<div class="ui main container text segment" style="margin-top: auto;">
    <div class="ui huge header">Answer This Post</div>
    <form action="/posts/<%= id %>" method="POST" class="ui form">
        <div class="field">
            <label>Answering to:</label>
            <input type="text" name="Post[title]" placeholder="Title" value="<%= Posts.title %>" readonly>
        </div>        
        <div class="field">
            <label>Body</label>
            <textarea name="Post[body]" placeholder="Body" required></textarea>
        </div>
        <button class="ui black basic button big">Submit Answer</button>
    </form>
</div>

