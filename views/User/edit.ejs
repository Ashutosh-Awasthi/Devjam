<%- include("../partials/head") %> 

<div class="ui main container text segment" style="margin-top: auto;">
    <div class="ui huge header">Edit Your Details</div>
    <form action="/user/edit" method="POST" class="ui form">   
            <div class="field">
                <label>Full Name*</label>
                <input type="text" name="name" placeholder="Full name" required value="<%= user.name %>">
            </div> 
            <div class="field">
                <label>Address*</label>
                <input type="text" name="address" placeholder="Address" required value="<%= user.address %>">
            </div> 
            <div class="field">
                <label>Describe Yourself</label>
                <textarea rows="3" name="description"><%= user.description %></textarea>
            </div>

        <button class="ui black basic button big">Edit</button>
    </form>
    
</div>




