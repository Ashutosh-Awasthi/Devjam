<%- include("partials/head") %> 

<div class="ui main container text segment" style="margin-top: auto;">
    <div class="ui huge header">Register</div>
    <form action="/register" method="POST" class="ui form">   
        <% if (Posts) { %>
            <div class="field">
                <label>Full Name*</label>
                <input type="text" name="name" placeholder="Full name" required value="<%= Posts.name %>">
            </div> 
            <div class="field">
                <label>Email ID*</label>
                <input type="email" name="email" placeholder="Email" required value="<%= Posts.email %>">
            </div> 
            <div class="field">
                <label>Address*</label>
                <input type="text" name="address" placeholder="Address" required value="<%= Posts.address %>">
            </div> 
            <div class="field">
                <label>Describe Yourself</label>
                <textarea rows="3" name="description"><%= Posts.description %></textarea>
            </div>
        <% }else{ %>
            <div class="field">
                <label>Full Name*</label>
                <input type="text" name="name" placeholder="Full name" required>
            </div> 
            <div class="field">
                <label>Email ID*</label>
                <input type="email" name="email" placeholder="Email" required>
            </div> 
            <div class="field">
                <label>Address*</label>
                <input type="text" name="address" placeholder="Address" required>
            </div> 
            <div class="field">
                <label>Describe Yourself</label>
                <textarea rows="3" name="description"></textarea>
            </div>
        <% } %>
 
        <div class="field">
            <label>Create Username:</label>
            <input type="text" name="username" placeholder="Username" required>
        </div>    
        <div class="field">
            <label>Create Password <p style="color: rgba(0,0,0,0.5);">(Alphanumeric having atleast one letter capital)<p></label>
            <input name="password" placeholder="Password" type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}">
        </div>

        <button class="ui black basic button big">Register</button>
    </form>
    
</div>




<%- include("partials/foot") %> 